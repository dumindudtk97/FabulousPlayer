<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fabulousplayer">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logoredish"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logoredish"
        android:supportsRtl="true"
        android:theme="@style/Theme.FabulousPlayer">
        <activity android:name=".activity.videFolder" />
        <activity android:name=".activity.VideoPlayer"
            android:configChanges="orientation|screenSize|screenLayout|smallestScreenSize"
            android:resizeableActivity="true"
            android:supportsPictureInPicture="true"></activity>
        <activity android:name=".activity.MainActivity" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/Splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>